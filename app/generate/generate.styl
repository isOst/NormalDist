.input
	width: 20%
	height: 50%
	display: inline-block
	float: left
	border-right: 1px solid #c8c8c1
	box-sizing: border-box
	
	h1
		font-size: 21px
		font-weight: 400
		text-align: center
		margin-bottom: 5px
	h2
		font-size: 15px
		font-weight: 300
		margin: 5px 0 10px 15px
		display: block
	p
		font-size: 11px
		font-weight: 300
		text-align: left
		color: #a9a9a5
		margin: 2px 0 10px 10px

	input
		margin: 0 0 5px 70px
		border: 1px solid black
		border-radius: 5px
		font-family: "Roboto Mono", monospace, serif
		font-size: 14px
		font-weight: 300
		padding-left: 10px
		width: 80px
		height: 22px
		text-align: center

	.generate
		padding: 8px 20px
		background-color: rgb(0, 179, 60)
		color: white
		font-family: "Roboto Mono", monospace, serif
		font-size: 16px
		border: none
		margin: 10px 60px
		&:hover
			color: rgb(0, 179, 60)
			font-weight: 400
			background-color: white
			border: 1px solid black
	
	.sample
		.list
			div
				&:hover
					&:after
						content: none