body
	height: 100vh
	width: auto
	
	font-family: 'Roboto Mono', monospace, serif
	font-weight: 300
	
	header
		border-bottom: 2px solid rgb(0, 179, 60)
		margin-bottom: 20px

	h1
		font-size: 32px
		font-weight: 100
		margin: 0 20px

	h2
		display: inline-block
		font-size: 19px
		margin-left: 50px
		font-weight: 400

	h3
		font-size: 16px
		font-weight: 400
		margin: 0 0 0 20px
		color: #c8c8c1

	a
		font-size: 19px
		font-weight: 400
		text-decoration: none
		margin-left: 20px
		padding: 5px 15px
		color: #a9a9a5
		&:hover
			background-color: rgb(0, 179, 60)
			color: white

