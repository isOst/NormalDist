.entry
	width: 20%
	height: 50%
	display: inline-block
	float: left
	border-right: 1px solid #c8c8c1
	box-sizing: border-box
	
	h1
		font-size: 23px
		font-weight: 400
		text-align: center
		margin-bottom: 5px
	h2
		font-size: 19px
		font-weight: 300
		margin: 5px 0 10px 20px

	h3
		font-size: 12px
		font-weight: 300

	h4
		font-size: 15px

	p
		font-size: 11px
		font-weight: 300
		text-align: center
		color: #a9a9a5
		margin: 5px 0 10px 0

	input
		margin: 5px 0 5px 50px
		border: 1px solid black
		border-radius: 5px
		font-family: "Roboto Mono", monospace, serif
		font-size: 14px
		font-weight: 300
		padding-left: 10px
		width: 100px
		height: 22px

	ul
		@extends .entry p
		text-align: left
		list-style-type: circle

	.analyze
		padding: 8px 20px
		background-color: rgb(0, 179, 60)
		color: white
		font-family: "Roboto Mono", monospace, serif
		font-size: 16px
		border: none
		margin: 30px 70px
		&:hover
			color: rgb(0, 179, 60)
			background-color: white
			border: 1px solid black

	.add
		padding: 8px 20px
		background-color: rgb(0, 179, 60)
		color: white
		font-family: "Roboto Mono", monospace, serif
		font-size: 16px
		border: none
		margin: 0
		&:hover
			color: rgb(0, 179, 60)
			background-color: white
			border: 1px solid black
			padding: 7px 20px

.sample
	width: 40%
	height: 200px
	display: inline-block
	float: right
	margin-top: 30px

	h1
		@extends .entry h1
	.list
		padding-left: 50px
		height: 180px
		overflow-y: scroll
		border-top: 1px solid #a9a9a5
		border-bottom: 1px solid #a9a9a5
		div
			display: inline-block
			width: 80px
			margin: 2px 3px
			padding: 2px 7px
			&:hover
				font-size: 16px
				color: white
				background-color: rgb(0, 179, 60)
				&:after
					content: "|x"
					cursor: pointer
					pointer-events: all


.chart
	width: 40%
	height: 70vh
	display: inline-block
	float: left
	border-right: 1px solid #c8c8c1
	box-sizing: border-box 

.statistics
	width: 40%
	display: inline-block
	float: right
	h1
		@extends .entry h1

	h2
		font-size: 16px
		font-weight: 300
		display: block
		margin: 5px 0 5px 30px

	p
		font-size: 12px
		font-weight: 400
		margin: 5px 0 10px 70px




